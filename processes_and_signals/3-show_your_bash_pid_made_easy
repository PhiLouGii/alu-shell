#!/usr/bin/env bash
# This script displays the PID and process name of processes containing the word "bash".

# Use pgrep command to find process IDs based on process name
# Loop through each process ID and retrieve the process name using /proc filesystem
for pid in $(pgrep -f bash); do
    process_name=$(cat "/proc/$pid/cmdline" 2>/dev/null | tr '\0' ' ')
    echo "PID: $pid, Process Name: $process_name"
done
